{
	"github-actions": {
		"fileMatch": ["flowzone.yml"]
	},
	"ignorePaths": [
		"**/node_modules/**",
		"**/bower_components/**",
		"**/vendor/**",
		"**/examples/**",
		"**/__tests__/**",
		"**/test/**",
		"**/tests/**",
		"**/__fixtures__/**",
		".github/workflows/flowzone.yml"
	],
	"packageRules": [
		{
			"matchManagers": ["github-actions"],
			"matchFiles": ["flowzone.yml"],
			"postUpgradeTasks": {
				"commands": ["npm ci", "npm run build"],
				"fileFilters": [".github/workflows/flowzone.yml"],
				"executionMode": "update"
			}
		},
		{
			"matchManagers": ["github-actions"],
			"matchUpdateTypes": ["major"],
			"commitBody": "Update {{depName}} from {{{replace 'v' '' currentVersion}}} to {{{replace 'v' '' newVersion}}}\n\nChange-type: minor",
			"labels": ["renovate", "dependencies", "{{depType}}", "minor"]
		},
		{
			"matchManagers": ["github-actions"],
			"matchUpdateTypes": ["minor"],
			"commitBody": "Update {{depName}} from {{{replace 'v' '' currentVersion}}} to {{{replace 'v' '' newVersion}}}\n\nChange-type: patch",
			"labels": ["renovate", "dependencies", "{{depType}}", "patch"]
		}
	]
}
